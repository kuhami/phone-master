@import "css/weui.wxss";
@import "css/icon.wxss";
@import "css/iconfont/iconfont.wxss";
page{
  font-family:"微软雅黑"; 
  background: white;
  box-sizing: border-box;
  position: fixed;
  top:0;
  right: 0;
  left: 0;
  bottom: 0;
}
/*处理下拉刷新兼容问题*/
.com_scroll_list{
  overflow:auto;
  margin:auto;
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
}
/*授权 start style*/
.authorize-contianer {
  height: 100%;
  background: #fff;
  text-align: center;
  padding-top: 100rpx;
}
.authorize-contianer .authorize-icon {
  width: 128rpx;
  height: 128rpx;
  display: block;
  margin: 0 auto;
  padding-bottom: 10rpx;
}
.authorize-contianer .auth-item {
  padding: 5rpx 0;
  color: #666;
  font-size: 30rpx;
}
.authorize-contianer .btn-authorize {
  margin: 100rpx 50rpx;
}
.authorize-contianer .btn-authorize button{
  background: #FFB001;
  color: #ffffff;
}
/*授权 end style*/

.hidden{
  display: none;
}
.red{
  color: red;
}