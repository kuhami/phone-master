

page{
  font-size: 30rpx;
  background: #F3F3F3;
}
.header{
  height: 150px;
  background: #FFD161;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.header .userImg{
  width: 120rpx;
  height: 120rpx;
  border-radius:120rpx;
  border: 8rpx solid yellow;
  margin-bottom: 30rpx;
}
.userName{
  color: #E64340;
}
.signOut{
  background: white;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 15rpx 0 100rpx 0;
}
.fail{
  color: #FFC640;
}
.success{
  color:#ff8f81;
}

.header_content {
  width: 100%;
  margin: 0 auto;
  text-align: center;
  padding-top: 48rpx;
}
.avatarUrl {
  width: 122rpx;
  height: 122rpx;
  border-radius: 1000px;
}
.nickName {
  font-size: 30rpx;
  padding-top: 15rpx;
}
.info_block {
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #333;
}
.info_block .item {
  background: #fff;
  padding: 34rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.info_block .item:last-child {
  border-bottom: 1rpx solid #e1e1e1;
}
.info_block .item_content {
  display: flex;
  align-items: center;
}
.info_block .item_content .text {
  color: #1a1a1a;
}
.info_block .item_img {
  width: 42rpx;
  height: 42rpx;
}
.info_block .arrow {
  color: #cccccc;
  font-size: 32rpx;
}
.info_block .tip {
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-left: 40rpx;
}
.weui-cell__bd {
  font-size: 28rpx;
  color: #333;
}
.weui-cell__ft{
  font-size: 28rpx;
}
.weui-cells:before {
  height: 0px;
  border-top: 1rpx solid #eee;
}
.weui-cells:after {
  height: 0px;
  border-bottom: 1rpx solid #eee;
}
.weui-cell:before {
  border-top: 1px solid #eee;
  left: 0px;
}
.icon_color{
  font-size: 32rpx;
  color: #ff8f81;
  margin-right: 10rpx;
}
.addIpone{
  background: #ffffff;
  position: fixed;
  left: 5%;
  top: 5%;
  bottom: 0px;
  width: 90%;
  height: 90%;
  border-radius: 20rpx;
  box-shadow:0px 2px 5px 5px #e1e1e1;
  z-index: 10;
}
.addtitle{
  color: #333;
  font-size: 32rpx;
  margin: 20rpx 20rpx 0rpx 20rpx;
  text-align: center;
}
.add_content{
  width: 100%;
  display: flex;
  margin: 20rpx 0px;
}
.add_text{
  width: 160rpx;
  line-height: 80rpx;
  text-align: right;
  margin-right: 10rpx;
  color: #666;
}
.add_input{
  width: 400rpx;
  height: 80rpx;
  border: 1px solid #e1e1e1;
  border-radius:10rpx;
  align-items: center;
}
.add_radio{
  width: 400rpx;
}
.add_radio .radio{
  margin: 20rpx 20rpx 0 0px;
}
.add_input input{
  margin: 20rpx 20rpx;
  height: 40rpx;
}
.placeholder_class{
  color: #666;
}
.add_content textarea{
  border-radius:10rpx;
  width:400rpx;
  height: 200rpx;
  border: 1px solid #e1e1e1;
  font-size: 28rpx;
}
.add_footer{
  width: 100%;
  text-align: center;
}
.add_button{
  width: 80%;
  border-radius: 20rpx;
  margin: 80rpx auto 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #E64340;
  color: #ffffff;
  font-size: 28rpx;
}
.cancel_button{
  width: 80%;
  border-radius: 20rpx;
  margin: 40rpx auto;
  height: 80rpx;
  line-height: 80rpx;
  background: #e1e1e1;
  color: #333;
  font-size: 28rpx;
}
.login{
  background: #ffffff;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 99;
}
