.heard{
  justify-content: space-around;
  display: flex;
  width: 100%;
  height: 400rpx;
  background-image: url("http://h5.keman.com/ueditor/uploadiImages/image/20181225/1545709660834471.jpg");
}
.search{
  align-items:center;
  display:flex;
  margin:0 auto;
  width:680rpx;
}
.search_icon{
  width: 30rpx;
  height: 30rpx;
}
.search_input{
  font-size:30rpx;
  width:100%;
  margin-left: 10rpx;
  vertical-align: middle;
}
.btn{
  width:120rpx;
  height:72rpx;
  background: #ff5923;
  padding:0 10rpx 0 5px;
  color: #ffffff;
  font-size:28rpx;
  line-height:72rpx;
  text-align: center;
  border-radius: 0rpx 10rpx 10rpx 0rpx;
}
.search .serch_content {
  display: flex;
  align-items: center;
  border-radius: 10rpx 0 0 10rpx;
  color: #333;
  width: 560rpx;
  background: #fff;
  padding: 5rpx 12rpx;
  height: 65rpx;
}
.search .serch_content i {
  margin-left: 10rpx;
  font-size: 50rpx;
  color: #666666;
}
.loading{
  height: 50rpx;
  text-align:center;
  background:#eee;
  color:#333;
  clear: both;
}

